{
  "name": "@jsx6/build",
  "version": "0.1.1",
  "type": "module",
  "description": "Monaco editor pre-build for standalone usage",
  "main": "index.js",
  "unpkg": "dist/index.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "default": "./dist/index.esm.js"
    }
  },
  "files": [
    "dist",
    "index.js",
    "src"
  ],
  "scripts": {
    "build": "npm run build-editor && npm run build-editor-esm",
    "build-editor": "esbuild index.js --outdir=dist --bundle --sourcemap --platform=node --minify --loader:.ttf=file --format=iife --global-name=jsx6build ",
    "build-editor-esm": "esbuild index.js --outfile=dist/index.esm.js --bundle --sourcemap --platform=node --minify --loader:.ttf=file --format=esm",
    "format": "prettier --write \"./*.{js,jsx,json}\"",
    "version": "node ./versync.js 0.34.100 && git add README.md",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hrgdavor/jsx6.git"
  },
  "keywords": [
    "build",
    "watch",
    "glob",
    "copy",
    "mkdir"
  ],
  "author": "Davor hrg",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/hrgdavor/jsx6/blob/master/LICENSE.md"
    }
  ],
  "bugs": {
    "url": "https://hrgdavor/jsx6/issues"
  },
  "homepage": "https://hrgdavor.github.io/jsx6/",
  "devDependencies": {
    "esbuild": "^0.14.39",
    "@trivago/prettier-plugin-sort-imports": "~3.3.0",
    "prettier": "~2.7.1"
  },
  "dependencies": {
    "glob": "^8.0.3"
  }
}
